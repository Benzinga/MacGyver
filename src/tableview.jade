extends layout

block append content
  .row.content
    #example.span12(ng-controller='ExampleController')
      section#table-view
        h2 Example
        .docs-example
          h3 MacTable
          table.table.mac-table-default(
            mac-table
            mac-table-columns="dynamic"
          )
            thead(mac-table-section="header", mac-table-section-blank-row)
              tr(mac-table-row)
                th(mac-cell-template="No.", mac-column-width="5%")
                  span {{cell.column.colName}}

                th(mac-cell-template="Title", mac-column-width="35%")
                  span {{cell.column.colName}}

                th(mac-cell-template="", mac-column-width="auto")
                  span {{cell.column.colName}}

            tbody(mac-table-section="body", mac-table-section-models="macGyverSeasonOne")
              tr(mac-table-row)
                td(mac-cell-template="")
                  span {{cell.value()}}

        pre.prettyprint.linenums(ng-non-bindable)
          | <table mac-table  mac-table-columns="dynamic" class="table mac-table-default">
          |   <thead mac-table-section="header" mac-table-section-blank-row>
          |     <tr mac-table-row>
          |       <th mac-cell-template="No." mac-column-width="5%"><span>{{cell.colName}}</span></th>
          |       <th mac-cell-template="Title" mac-column-width="35%"><span>{{cell.colName}}</span></th>
          |       <th mac-cell-template="" mac-column-width="auto"><span>{{cell.colName}}</span></th>
          |     </tr>
          |   </thead>
          |   <tbody mac-table-section="body" mac-table-section-models="macGyverSeasonOne">
          |     <tr table-row>
          |       <td mac-cell-template=""><span>{{cell.value()}}</span></td>
          |     </tr>
          |   </tbody>
          | </table>

block append scripts
  script
    $("#top-nav li").removeClass("active");
    $("#tableview-nav").addClass("active");
