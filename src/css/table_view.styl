@import "nib"

border-color     = #dddddd
hover-background = #f5f5f5
even-background  = #f0f5ff
border-radius    = 4px

.table-container
  border     1px solid border-color
  overflow-x hidden
  position   relative

  .table-row
    clear both
    float left

    .table-cell
      text-align  left
      float       left

      .cell
        &:hover
          background-color hover-background

  .table-header
    float left
    background linear-gradient(top, #ffffff, #e6e6e6)
    border-bottom solid 1px #bebebe

    .table-row:first-child
      .cell
        border-top 0

    .locked-cell
      position   absolute

    .cell
      text-align    left
      float         left
      font-size     12px
      font-weight   bold
      text-overflow ellipsis

      &.ui-sortable-placeholder
        background-color hover-background

      &.resizable
        border-right 1px solid #000000

  .table-body-wrapper
    overflow-y auto
    position   relative
    width      100%

    .table-body, .title-column
      position absolute

    .table-body
      overflow-x auto

    .table-body-height
      position absolute
      top      0px
      width    50px

  .table-body-background
    position absolute
    top      0px
    left     0px
    width    100%

    .table-row
      width  100%

      &:nth-child(even)
        background-color even-background

  .table-header:first-child
    .table-row:first-child
      .cell:first-child
        border-top-left-radius border-radius

      .cell:last-child
        border-top-right-radius border-radius

  .table-header:last-child,
  .table-body:last-child,
  .table-footer:last-child
    .table-row:last-child
      .cell:first-child
        border-bottom-left-radius border-radius

      .cell:last-child
        border-bottom-right-radius border-radius

  .table-transclude
    display none



