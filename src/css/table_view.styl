@import "nib"

border-color     = #dddddd
hover-background = #f5f5f5
even-background  = #f0f5ff
border-radius    = 4px

.table-container
  border   1px solid border-color
  position relative

  .table-row
    clear       both
    float       left
    white-space nowrap

    .table-cell
      text-align  left
      float       left

      .cell
        width 100%

        &:hover
          background-color hover-background

  .table-header, .table-footer
    float         left
    background    #ffffff linear-gradient(top, #ffffff, #e6e6e6)
    border-bottom solid 1px #bebebe
    overflow-x    hidden
    width         100%

    .table-header-cell
      float    left
      position relative

      .caret
        vertical-align middle
        cursor         pointer
        margin-left    5px

        &.hide
          display none

        &.up
          border-bottom 4px solid #000
          border-top    transparent
        &.down
          border-top    4px solid #000
          border-bottom transparent

    .table-row:first-child
      .cell
        border-top 0

    .locked-cell
      position   absolute
      background #ffffff linear-gradient(top, #ffffff, #e6e6e6)

    .cell
      text-align    left
      float         left
      font-size     12px
      font-weight   bold
      text-overflow ellipsis
      width         100%

      &.ui-sortable-placeholder
        background-color hover-background

      &.resizable
        border-right 1px solid #000000

      .btn
        float right

  .table-body-wrapper
    overflow-y auto
    overflow-x hidden
    position   relative
    width      100%

    .table-body, .title-column
      position absolute

    .table-body
      width      100%
      overflow-x auto

    .table-body-height
      position absolute
      top      0px
      width    50px

  .table-body-background
    position       absolute
    top            0px
    left           0px
    width          100%
    pointer-events none

    .table-row
      width  100%

      &:nth-child(even)
        background-color even-background

  .table-header:first-child
    .table-row:first-child
      .cell:first-child
        border-top-left-radius border-radius

      .cell:last-child
        border-top-right-radius border-radius

  .table-header:last-child,
  .table-body:last-child,
  .table-footer:last-child
    .table-row:last-child
      .cell:first-child
        border-bottom-left-radius border-radius

      .cell:last-child
        border-bottom-right-radius border-radius

  .table-transclude
    display none



