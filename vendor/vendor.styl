@import "nib"

body
  background  #f9fafb
  padding-top 54px
  position    relative

section
  padding-top 30px

  h1
    padding-bottom 9px
    margin         20px 0 30px
    border-bottom  1px solid #eeeeee

#top-nav
  background    #ffffff
  position      fixed
  left          0
  right         0
  top           0
  z-index       10
  border-bottom 1px solid #e4e6ea
  transform     rotateX(0) rotateY(0)

.content
  padding-bottom 100px

// Example section css
.docs-example
  position         relative
  margin           15px 0
  padding          39px 19px 14px
  *padding-top     19px
  background-color #fff
  border           1px solid #ddd
  border-radius    4px
  min-height       25px

  &:after
    content          "Example"
    position         absolute
    top              -1px
    left             -1px
    padding          3px 7px
    font-size        12px
    font-weight      bold
    background-color #f5f5f5
    border           1px solid #ddd
    color            #9da0a4
    border-radius    4px 0px 4px 0px

// Side nav
.docs-sidenav
  width            220px
  margin           30px 0px 0px
  padding          0
  background-color #fff
  border-radius    6px
  box-shadow       0 1px 4px rgba(0,0,0,.065)
  transform        rotateX(0) rotateY(0)

  &.affix
    top 54px

  li
    a
      display block
      margin  0 0 -1px
      padding 8px 14px
      border  1px solid #e5e5e5

    &:first-child
      a
        border-radius  6px 6px 0 0
    &:last-child
      a
        border-radius  0 0 6px 6px

    .icon-chevron-right
      float        right
      margin-top   2px
      margin-right -6px
      opacity      .25

  .active
    a
      position    relative
      z-index     2
      padding     9px 15px
      border      0
      text-shadow 0 1px 0 rgba(0,0,0,.15)
      box-shadow  inset 1px 0 0 rgba(0,0,0,.1), inset -1px 0 0 rgba(0,0,0,.1)

// Taken from Twitter bootstrap prettify
// http://twitter.github.io/bootstrap/assets/js/google-code-prettify/prettify.css
.com
  color #93a1a1
.lit
  color #195f91
.pun, .opn, .clo
  color #93a1a1
.fun
  color #dc322f
.str, .atv
  color #D14
.kwd, .prettyprint .tag
  color #1e347b
.typ, .atn, .dec, .var
  color teal
.pln
  color #48484c

.prettyprint
  padding          8px
  background-color #f7f7f9
  border           1px solid #e1e1e8

.prettyprint.linenums
  box-shadow inset 40px 0 0 #fbfbfc, inset 41px 0 0 #ececf0


/* Specify class=linenums on a pre to get line numbering */
ol.linenums
  margin 0 0 0 33px /* IE indents via margin-left */

ol.linenums li
  padding-left 12px
  color        #bebec5
  line-height  20px
  text-shadow  0 1px 0 #fff

/* Desktop large
------------------------- */
@media (min-width: 1200px)
  .docs-sidenav
    width 258px

  .docs-sidenav > li > a
    width 230px \9 /* Override the previous IE8-9 hack */

/* Desktop
------------------------- */
@media (max-width: 980px)

  /* When affixed, space properly */
  .docs-sidenav
    top          0
    width        218px
    margin-top   30px
    margin-right 0

/* Tablet to desktop
------------------------- */
@media (min-width: 768px) and (max-width: 979px)
  /* Adjust sidenav width */
  .docs-sidenav
    width      166px
    margin-top 20px

/* Tablet
------------------------- */
@media (max-width: 767px)
  /* Sidenav */
  .docs-sidenav
    width         auto
    margin-bottom 20px

    &.affix
      position static
      width    auto
      top      0
